        <h4 class="head-title1">Thông tin Khách hàng</h4>
        <ul class="customer-info">
            <li><span>Họ &amp; Tên: </span> @ViewBag.khachhang.HoTenKhachHang </li>
            <li><span>Điện thoại: </span>@ViewBag.khachhang.DienThoai</li>
            <li><span>Email: </span>@ViewBag.khachhang.Email</li>
            <li><span>Địa chỉ: </span>@ViewBag.khachhang.Diachi</li>
            <li><span>Thanh toán: </span>@ViewBag.HinhThucThanhToan</li>

            <li> <pre></pre> </li>
        </ul>
        <h4 class="head-title1">Thông tin Hành khách</h4>
        <table class="table1 table-border table-hover" style="background: oldlace none repeat scroll 0% 0%; margin-bottom: 15px;">
            <tbody>
                @foreach (adult item in Model.adultList)
                {
                    <tr style="color: red;">
                        <td style="width: 200px;">@item.adultSex </td>
                        <td>@item.adultName</td>
                        <td>@item.adultBaggageType  </td>
                    </tr>

                }
                @foreach (child item in Model.childList)
                {
                    <tr style="color: red;">
                        <td style="width: 200px;">@item.childSex </td>
                        <td>@item.childName</td>
                        <td>@item.childBaggageType </td>
                    </tr>

                }
                @foreach (infant item in Model.infantList)
                {
                    <tr style="color: red;">
                        <td style="width: 200px;">@item.infantSex </td>
                        <td>@item.infantName</td>
                    </tr>

                }
            </tbody>
        </table>
        <h3 class="total-price">
            GIÁ VÉ: <span class="currency">@ViewBag.tongtien VNĐ</span> <br>
            <div style="font-size: 16px; padding-top: 9px; color: tomato;">
